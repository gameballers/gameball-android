<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="4dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/challenge_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_diamond"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/not_achieved_indicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/challenge_icon"
        app:layout_constraintBottom_toBottomOf="@id/challenge_icon"
        app:layout_constraintEnd_toEndOf="@id/challenge_icon"
        app:layout_constraintStart_toStartOf="@id/challenge_icon"
        android:background="@color/semiTransparent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/locked_challenge_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/challenge_icon"
        app:layout_constraintEnd_toEndOf="@id/challenge_icon"
        android:src="@drawable/ic_lock_white"
        android:background="@drawable/round_grey_bg"
        android:padding="2dp" />

    <ImageView
        android:id="@+id/green_check_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_green_check"
        tools:ignore="ContentDescription" />

    <ProgressBar
        android:id="@+id/challenge_progress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:progressDrawable="@drawable/circular_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:rotation="270" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/end_items_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="challenge_progress,green_check_icon" />

    <TextView
        android:id="@+id/challenge_achieved_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/end_items_barrier"
        android:layout_marginEnd="5dp"
        tools:text="1x"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/montserrat_light" />

    <TextView
        android:id="@+id/challenge_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/challenge_icon"
        app:layout_constraintBottom_toBottomOf="@id/challenge_icon"
        app:layout_constraintStart_toEndOf="@id/challenge_icon"
        app:layout_constraintEnd_toStartOf="@id/challenge_achieved_count"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        tools:text="challenge name"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:fontFamily="@font/montserrat_light"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/challenge_icon"
        app:layout_constraintStart_toStartOf="@id/challenge_icon"
        app:layout_constraintEnd_toEndOf="@id/challenge_icon"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_arrow_left"
        android:rotation="-90"
        tools:ignore="ContentDescription"
        android:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>