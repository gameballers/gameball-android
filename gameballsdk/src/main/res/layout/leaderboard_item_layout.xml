<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    
    <TextView
        android:id="@+id/leader_rank"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_grey_bg"
        android:text="1"
        android:textSize="8sp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/player_level_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_diamond"
        app:layout_constraintStart_toEndOf="@id/leader_rank"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"

        />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/player_current_level_name"
        app:layout_constraintEnd_toStartOf="@id/barrier"
        app:layout_constraintStart_toEndOf="@id/player_level_logo"
        app:layout_constraintTop_toTopOf="@id/player_level_logo"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="player name" />

    <TextView
        android:id="@+id/player_current_level_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/player_level_logo"
        app:layout_constraintEnd_toEndOf="@id/player_name"
        app:layout_constraintStart_toStartOf="@id/player_name"
        app:layout_constraintTop_toBottomOf="@id/player_name"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="level name" />

    <TextView
        android:id="@+id/frubies_for_next_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_name"
        tools:text="7,200" />

    <TextView
        android:id="@+id/frubies_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frubies"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/frubies_for_next_level"
        app:layout_constraintEnd_toEndOf="@id/frubies_for_next_level"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#f2f2f2"
        app:layout_constraintTop_toBottomOf="@id/player_level_logo" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="frubies_for_next_level,frubies_title" />

</android.support.constraint.ConstraintLayout>