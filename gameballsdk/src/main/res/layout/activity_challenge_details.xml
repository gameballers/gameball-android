<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_grey_curved_bottom"
            android:paddingBottom="37dp"
            >

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_arrow_left"
                android:layout_marginTop="25dp"
                android:paddingLeft="25dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingRight="25dp"
                android:background="@null"

                />

            <ImageView
                android:id="@+id/challenge_icon"
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:layout_below="@id/back_btn"
                android:layout_centerHorizontal="true"
                tool:src="@drawable/ic_diamond"
                android:layout_marginTop="15dp"
                />

            <View
                android:id="@+id/not_achieved_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@id/challenge_icon"
                android:layout_alignEnd="@id/challenge_icon"
                android:layout_alignLeft="@id/challenge_icon"
                android:layout_alignRight="@id/challenge_icon"
                android:layout_alignTop="@id/challenge_icon"
                android:layout_alignBottom="@id/challenge_icon"
                android:background="#90efefef"
                />


            <ImageView
                android:id="@+id/locked_challenge_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/challenge_icon"
                android:layout_alignRight="@id/challenge_icon"
                android:layout_alignTop="@id/challenge_icon"
                android:background="@drawable/bg_dark_gery_round"
                android:padding="3dp"
                android:src="@drawable/ic_lock_white"
                />

            <TextView
                android:id="@+id/challenge_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/challenge_icon"
                android:layout_marginTop="12dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:textColor="#1a1a1a"
                tool:text="challenge name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/challenge_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/challenge_name"
                android:layout_alignStart="@id/challenge_name"
                android:layout_alignEnd="@id/challenge_name"
                android:layout_alignRight="@id/challenge_name"
                android:layout_alignLeft="@id/challenge_name"
                android:layout_marginTop="3dp"
                android:gravity="center"
                tool:text="challenge description challenge description challenge description"
                android:textColor="#1a1a1a"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/challenge_reward_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/challenge_description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_gift"
                android:drawableLeft="@drawable/ic_gift"
                android:drawablePadding="5dp"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                tool:text="30 Frubies | 30 Points"
                android:textStyle="bold"
                android:gravity="center"
                />



        </RelativeLayout>
    
        <RelativeLayout
        android:id="@+id/challenge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:visibility="visible"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/progress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="@string/progress"
            android:textSize="16sp"
            style="@style/text_title_style"
            />

        <TextView
            android:id="@+id/challenge_target_event_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/challenge_event_description"
            android:layout_alignEnd="@id/challenge_event_progress"
            android:layout_alignRight="@id/challenge_event_progress"
            tool:text="10"
            android:textSize="10sp"
            android:textColor="#808080"
            android:textStyle="bold"
            tool:visibility="visible"
            android:visibility="gone"
            />

        <ProgressBar
            android:id="@+id/challenge_event_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/progress_title"
            android:layout_alignStart="@id/progress_title"
            android:layout_alignLeft="@id/progress_title"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:progress="0"
            android:layout_marginTop="20dp"
            tool:progress="50"
            android:progressDrawable="@drawable/level_progress_drawable"
            android:elevation="1dp"
            android:visibility="gone"
            tool:visibility="visible"
            />

        <TextView
            android:id="@+id/challenge_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/challenge_event_progress"
            android:layout_toStartOf="@id/challenge_target_event_count"
            android:layout_toLeftOf="@id/challenge_target_event_count"
            android:layout_alignLeft="@id/challenge_event_progress"
            android:layout_below="@id/challenge_event_progress"
            android:layout_marginTop="7dp"
            android:gravity="center|start|left"
            tool:text="amount description"
            android:textColor="#808080"
            android:textSize="10sp"
            tool:visibility="visible"
            android:visibility="gone"
            />
    </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/high_score_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tool:visibility="visible"
            >
            <TextView
                android:id="@+id/high_score_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="@string/high_score"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/your_high_score_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/high_score_title"
                android:layout_alignStart="@id/high_score_title"
                android:layout_alignLeft="@id/high_score_title"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:text="Your high score is"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#1a1a1a"
                />

            <TextView
                android:id="@+id/high_score_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/your_high_score_title"
                android:layout_alignStart="@id/your_high_score_title"
                android:layout_alignLeft="@id/your_high_score_title"
                android:layout_alignEnd="@id/your_high_score_title"
                android:layout_alignRight="@id/your_high_score_title"
                android:layout_marginTop="8dp"
                android:gravity="center"
                tool:text="3.56 KM"
                android:textColor="#1a1a1a"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/is_repeatable_high_score_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/high_score_value"
                android:layout_alignStart="@id/high_score_value"
                android:layout_alignEnd="@id/high_score_value"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#aaaaaa"
                android:text="@string/is_repeatable_high_score_txt"
                android:gravity="center"
                android:fontFamily="@font/montserrat_light"
                android:visibility="gone"
                tool:visibility="visible"
                />
        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="@string/status"
                style="@style/text_title_style"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                tool:src="@drawable/ic_status_locked"
                />

            <TextView
                android:id="@+id/status_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="12dp"
                android:textColor="#808080"
                android:textSize="20sp"
                android:textStyle="bold"
                tool:text="status description"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/achieved_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                tool:text="4 time(s)"
                android:textColor="#aaaaaa"
                android:fontFamily="@font/montserrat_light"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>