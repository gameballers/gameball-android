<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gb_bg_white_st_light_grey_top_corners"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/mission_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/gb_ic_diamond" />

    <TextView
        android:id="@+id/mission_completion_percentage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mission_icon"
        app:layout_constraintBottom_toBottomOf="@id/mission_icon"
        android:layout_marginEnd="12dp"
        android:background="@drawable/gb_bg_light_grey_round"
        tools:text="75%"
        android:textColor="@android:color/black"
        android:textSize="8sp"
        android:gravity="center"
        android:fontFamily="@font/gb_montserrat_semi_bold" />

    <ImageView
        android:id="@+id/green_check_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/mission_icon"
        app:layout_constraintBottom_toBottomOf="@id/mission_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:src="@drawable/gb_ic_green_check" />

    <TextView
        android:id="@+id/mission_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/mission_icon"
        app:layout_constraintStart_toEndOf="@id/mission_icon"
        app:layout_constraintEnd_toStartOf="@id/mission_completion_percentage"
        app:layout_constraintBottom_toTopOf="@id/mission_reward"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/gb_montserrat_light"
        tools:text="mission name " />

    <TextView
        android:id="@+id/mission_reward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/mission_icon"
        app:layout_constraintStart_toStartOf="@id/mission_name"
        app:layout_constraintEnd_toEndOf="@id/mission_name"
        app:layout_constraintTop_toBottomOf="@id/mission_name"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/gb_montserrat_semi_bold"
        android:drawableStart="@drawable/gb_ic_gift"
        android:drawablePadding="4dp"
        tools:text="50 score | 10 points"
        android:gravity="center|start" />

    <TextView
        android:id="@+id/challenges_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mission_reward"
        app:layout_constraintStart_toStartOf="@id/mission_icon"
        android:layout_marginTop="15dp"
        tools:text="4 Challenges"
        android:textSize="10sp"
        android:fontFamily="@font/gb_montserrat_regular" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/challenges_count"
        app:layout_constraintBottom_toBottomOf="@id/challenges_count"
        app:layout_constraintEnd_toEndOf="@id/mission_completion_percentage"
        android:src="@drawable/gb_ic_arrow_down_dark" />

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/missions_expandable_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/challenges_count"
        app:layout_constraintStart_toStartOf="@id/challenges_count"
        app:layout_constraintEnd_toEndOf="@id/mission_completion_percentage"
        android:layout_marginTop="12dp"
        app:el_expanded="false">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mission_challenges_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/gb_mission_challenges_item_layout"
            tools:orientation="vertical"
            tools:itemCount="3" />

    </net.cachapa.expandablelayout.ExpandableLayout>

    <ProgressBar
        android:id="@+id/mission_progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintTop_toBottomOf="@id/missions_expandable_layout"
        app:layout_goneMarginTop="12dp"
        android:layout_marginTop="15dp"
        android:progress="50" />

</androidx.constraintlayout.widget.ConstraintLayout>