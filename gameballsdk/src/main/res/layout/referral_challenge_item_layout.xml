<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_white_st_light_grey_top_corners"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/challenge_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_diamond"
        />
    
    <ImageView
        android:id="@+id/challenge_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:src="@drawable/round_grey_bg"
        android:scaleType="fitXY"
        />
    
    <TextView
        android:id="@+id/challenge_achieved_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/challenge_check"
        app:layout_constraintBottom_toBottomOf="@id/challenge_check"
        app:layout_constraintEnd_toStartOf="@id/challenge_check"
        android:textSize="12sp"
        android:text="x1"
        android:textColor="@android:color/black"
        android:layout_marginEnd="3dp"
        />

    <TextView
        android:id="@+id/challenge_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/challenge_icon"
        app:layout_constraintStart_toEndOf="@id/challenge_icon"
        app:layout_constraintEnd_toStartOf="@id/challenge_achieved_count"
        app:layout_constraintBottom_toTopOf="@id/challenge_reward_txt"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:lines="1"
        android:ellipsize="end"
        tools:text="Refer 1 Friend(s)"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/challenge_reward_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/challenge_icon"
        app:layout_constraintTop_toBottomOf="@id/challenge_name"
        app:layout_constraintStart_toStartOf="@id/challenge_name"
        app:layout_constraintEnd_toEndOf="@id/challenge_name"
        app:layout_constraintVertical_chainStyle="packed"
        android:drawableStart="@drawable/ic_gift"
        android:drawablePadding="5dp"
        tools:text="Refer 1 Friend(s)"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />

    <ProgressBar
        android:id="@+id/challenge_event_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/challenge_icon"
        android:layout_marginTop="10dp"
        android:elevation="1dp"
        android:progress="50"
        tools:progress="50"
        android:progressDrawable="@drawable/level_progress_drawable"
        />
</android.support.constraint.ConstraintLayout>